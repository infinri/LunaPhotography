# Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Application Environment (development/production)
APP_ENV=production

# Site Configuration
SITE_NAME=
SITE_URL=

# Security
CSRF_ENABLED=true
HTTPS_ONLY=true

# Session Configuration
SESSION_LIFETIME=7200        # Session lifetime in seconds (default: 7200 = 2 hours)
SESSION_DOMAIN=              # Session cookie domain (leave empty for current domain)
